<UserControl x:Class="ProTemplate.UserControls.NavigationPanelHeaderItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="35" d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <Image x:Name="img" Width="24" Height="24" Margin="10,0,10,0" />
        <TextBlock x:Name="tbText" Style="{StaticResource NavigationLinkTextStyle}" FontSize="12" FontFamily="SimSun" />
    </StackPanel>
</UserControl>
